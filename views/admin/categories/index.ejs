<%- include ("../../partials/header.ejs") %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn-btn-sucess" href="/admin/categories/new">Criar nova categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <body>
            <%- categories.forEach(category => {
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th> 
                    <th><%= category.slug %></th>
                    <th>
                        <button class="btn btn-warning">Editar</button>
                        <form method="POST" action="/categories/delete" style="display: inline;"></form>
                        <input type="hidden" name="id" value="<%= categoria.id %">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                    </th>     
                </tr>
            })
        </body>
    </table>
</div>
<%- include ("../../partials/footer.ejs") %>